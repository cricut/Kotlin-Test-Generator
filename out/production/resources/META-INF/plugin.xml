<idea-plugin>
    <id>com.seboba.MockKTestGenerator</id>
    <name>Kotlin MockK Test Generator</name>
    <version>1.0.1</version>
    <vendor email="sebastian@helzer.eu">Sebastian Helzer</vendor>

    <description><![CDATA[
    This is a simple testing plugin.<br>
    <em>It allows you to generate tests for Kotlin code using MockK for mocks and JUnit4 for the test running engine</em>
    ]]></description>

    <change-notes><![CDATA[
    Initial release of the Kotlin MockK Test Generator
    ]]>
    </change-notes>

    <!-- please see https://confluence.jetbrains.com/display/IDEADEV/Build+Number+Ranges for description -->
    <idea-version since-build="192" until-build="193.*"/>

    <depends>com.intellij.modules.lang</depends>
    <depends>org.jetbrains.kotlin</depends>

    <actions>
        <action id="testGen.TestGeneratorAction" class="com.seboba.testgen.actions.TestGeneratorAction" text="KotlinGenerateTest"
                description="Generate test without mocks">
            <add-to-group group-id="KotlinGenerateGroup" anchor="first"/>
        </action>
    </actions>
</idea-plugin>